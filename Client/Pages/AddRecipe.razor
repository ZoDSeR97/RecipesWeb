@inject HttpClient Http
@inject NavigationManager Nav
@using RecipesWeb.Shared
@page "/AddRecipe"

<EditForm Model="NewRecipe" OnValidSubmit="HandleNewData">
    <DataAnnotationsValidator/>
    <div class="form-floating mb-3">
        <InputText type="text" class="form-control" placeholder="Something delicious" aria-describedby="So good" @bind-Value="NewRecipe.Name" />
        <label for="Email1" class="form-label">Name</label>
        <ValidationMessage For="@(()=>NewRecipe.Name)" />
    </div>
    <div class="col-span-full">
        <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Instructions</label>
        <div class="mt-2">
            <InputText rows="3" 
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" 
                @bind-Value="NewRecipe.Instruction"/>
            <ValidationMessage For="@(()=>NewRecipe.Instruction)" />
        </div>
        <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about yourself.</p>
    </div>
</EditForm>

